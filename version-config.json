{
  "name": "TechPulse",
  "currentVersion": "0.1.3",
  "versionFormat": "semantic",
  "autoIncrement": {
    "enabled": true,
    "type": "patch"
  },
  "files": [
    {
      "path": "version.json",
      "type": "json",
      "fields": ["version"],
      "description": "主版本配置文件"
    },
    {
      "path": "frontend/package.json",
      "type": "json", 
      "fields": ["version"],
      "description": "前端包配置"
    },
    {
      "path": "frontend/src/components/VersionInfo.tsx",
      "type": "typescript",
      "patterns": [
        {
          "match": "const version = '[^']*'",
          "template": "const version = '{{version}}'"
        },
        {
          "match": "const build = '[^']*'",
          "template": "const build = '{{build}}'"
        }
      ],
      "description": "前端版本显示组件"
    }
  ],
  "releaseNotes": {
    "enabled": true,
    "file": "RELEASE.md",
    "template": "templates/release-template.md"
  },
  "buildInfo": {
    "enabled": true,
    "dateFormat": "YYYYMMDD",
    "includeBranch": true,
    "includeCommit": true
  },
  "validation": {
    "semver": true,
    "required": ["version.json", "frontend/package.json"]
  },
  "postUpdate": {
    "scripts": [
      "npm run lint --prefix frontend",
      "git add .",
      "git commit -m 'chore: bump version to {{version}}'"
    ]
  }
}