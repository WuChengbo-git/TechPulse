# ============================================
# TechPulse Backend Configuration
# ============================================

# Database Configuration
DATABASE_URL=sqlite:///./techpulse.db

# API Configuration
APP_NAME=TechPulse API
DEBUG=True
SECRET_KEY=your-secret-key-here

# ============================================
# Azure OpenAI Configuration
# ============================================

# Azure OpenAI Service Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Model Deployment Names (Azure OpenAI)
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# ============================================
# Translation & Summarization Settings
# ============================================

# Default language for translation and summarization
DEFAULT_LANGUAGE=zh  # zh=Chinese, ja=Japanese, en=English
ENABLE_TRANSLATION=True
ENABLE_SUMMARIZATION=True

# ============================================
# GitHub Configuration
# ============================================

# GitHub API Token (Optional, for higher rate limits)
GITHUB_TOKEN=your-github-token-here

# ============================================
# Hugging Face Configuration
# ============================================

# Hugging Face API Token (Optional, for private models)
HUGGINGFACE_TOKEN=your-huggingface-token-here

# ============================================
# Notion Integration (Optional)
# ============================================

# Notion API Configuration
NOTION_TOKEN=your-notion-token-here
NOTION_DATABASE_ID=your-notion-database-id

# ============================================
# Data Collection Settings
# ============================================

# Collection intervals (in hours)
COLLECTION_INTERVAL_HOURS=6

# Maximum items to collect per source
MAX_ITEMS_PER_SOURCE=50

# AI Keywords for GitHub filtering
AI_KEYWORDS=machine learning,deep learning,neural network,artificial intelligence,tensorflow,pytorch,keras,scikit-learn,transformers,llm,gpt,bert,stable diffusion,generative ai,chatbot,computer vision,nlp,data science

# ============================================
# Logging Configuration
# ============================================

LOG_LEVEL=INFO
LOG_FILE=logs/backend.log