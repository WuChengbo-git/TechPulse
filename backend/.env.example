# Database Configuration
DATABASE_URL=sqlite:///./techpulse.db

# Security Keys
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=another-secret-key-for-jwt-tokens

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@techpulse.com
SMTP_FROM_NAME=TechPulse

# OAuth2 - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth2 - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth2 - Microsoft
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# OAuth Redirect URI
OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=48
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Azure OpenAI Configuration
AZURE_APIBASE=https://your-resource.openai.azure.com/
AZURE_APIKEY=your-azure-openai-key
OPENAI_API_VERSION=2024-02-01

# Notion Integration
NOTION_TOKEN=your-notion-token
NOTION_DATABASE_ID=your-notion-database-id

# Debug Mode
DEBUG=false
